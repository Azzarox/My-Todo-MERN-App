    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "React Debug",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/client/src"
        },
        // {
        //     // This debugs the api, it starts the server automatically
        //     // it has warnings for protocol and port
        //     "name": "Debug API",
        //     "type": "node",
        //     "request": "launch",
        //     "program": "${workspaceFolder}/api/index.js",
        //     "env": {
        //         // "NODE_ENV": "development"
        //     },
        //     "outputCapture": "std",
        //     "skipFiles": ["<node_internals>/**"],
        //     "restart": true,
        //     "protocol": "inspector",
        //     "port": 9229
        // },

        // This works fine
        {
            "name": "Debug API",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/api/index.js",
            "env": {
                "NODE_ENV": "development"
            },
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "sourceMaps": true
        }
    ]
}
