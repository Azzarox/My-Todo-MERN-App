{
    "openapi": "3.0.0",
    "info": {
        "title": "MERN Todo Api",
        "version": "1.0.0",
        "description": "Rest Api for MERN Todo App"
    },
    "servers": [
        {
            "url": "http://localhost:3001"
        }
    ],
    "paths": {
        "/api/auth/register": {
            "post": {
                "summary": "Create an user",
                "tags": ["Auth"],

                "requestBody": {
                    "description": "User login data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User",
                                "example": {
                                    "username": "exampleuser",
                                    "password": "examplepassword",
                                    "repass": "examplepassword"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Returns object with the user's id and username",
                        "content": {
                            "application/json": {
                                "example": {
                                    "id": "643baf97930318819d9b6c89",
                                    "username": "exampleuser"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Returns message with the error's message",
                        "content": {
                            "application/json": {
                                "example": {
                                    "err": "The error's message may be different"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "summary": "Logs a user and returns a token",
                "tags": ["Auth"],

                "requestBody": {
                    "description": "User login data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserLogin",
                                "example": {
                                    "username": "exampleuser",
                                    "password": "examplepassword"
                                }
                            }
                        }
                    }
                },

                "responses": {
                    "200": {
                        "description": "Returns a JWT Token which when decoded it contains the user id and username",
                        "content": {
                            "application/json": {
                                "example": {
                                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiIxMjM0NTY3ODkwIiwidXNlcm5hbWUiOiJKb2huIERvZSJ9.TJVA95OrM7E2cBab30RMHrHDcEfxjoYZgeFONFh7HgQ"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Returns message with the error's message",
                        "content": {
                            "application/json": {
                                "example": {
                                    "err": "The error's message may be different"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/todos": {
            "get": {
                "summary": "Queries all the todos. By default its all recent ones.",
                "tags": ["Todos"],
                "description": "To use the try out you need to click on the lock at the far right and add a valid jwt token",
                "security": [{ "BearerAuth": [] }],
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "JWT token in the format `Bearer <token>`",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY0MzNjY2VhN2UyOWNmNDg3YWNkYjQ0ZSIsInVzZXJuYW1lIjoiMSIsImlhdCI6MTY4MTYzNDA4OH0.O7W0gnF4JAHc59FfRLL070gg9VFpiVBak5rwzP8dsPg"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns a list of the currently logged user's todos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TodoListResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Unauthorized"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/todos?filter=": {
            "get": {
                "summary": "Queries all todos by the user by certain filter value",
                "description": "To use the try out you need to click on the lock at the far right and add a valid jwt token",
                "tags": ["Todos"],
                "security": [{ "BearerAuth": [] }],
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "JWT token in the format `Bearer <token>`",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY0MzNjY2VhN2UyOWNmNDg3YWNkYjQ0ZSIsInVzZXJuYW1lIjoiMSIsImlhdCI6MTY4MTYzNDA4OH0.O7W0gnF4JAHc59FfRLL070gg9VFpiVBak5rwzP8dsPg"
                        }
                    },
                    {
                        "name": "filter",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": ["recent", "incomplete", "complete"],
                            "default": "recent"
                        },
                        "description": "Filter option to apply on todos. It can be one of the following below. If nothing is set by default it is recent"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns a list of the currently logged user's todos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TodoListResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Unauthorized"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "UserRegister": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "required": true
                    },
                    "password": {
                        "type": "string",
                        "required": true
                    },
                    "repass": {
                        "type": "string",
                        "required": true
                    }
                }
            },
            "UserLogin": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "required": true
                    },
                    "password": {
                        "type": "string",
                        "required": true
                    }
                }
            },
            "TodoListResponse": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "_id": {
                            "type": "string"
                        },
                        "title": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "isDone": {
                            "type": "boolean"
                        },
                        "author": {
                            "type": "string"
                        },
                        "createdAt": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "updatedAt": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "__v": {
                            "type": "number"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}
